<div class="active border border-bottom-0" role="presentation">
  <!--  month_calendar -->
  <%= calendar(number_of_days: 1, events: @meetings) do |date, meetings| %>
    <!-- #Day of the month (rounded btn blue)-->
    <div class="position-relative">
      <% if date.day == Date.today.day %>
        <div type="button" class="position-absolute top-0 start-50">
          <%= link_to "#{date.day}", home_myday_path, class:"btn btn-sm btn-primary rounded-pill p-0", style:"width: 1.3rem; height:1.3rem;" %>
        </div>
      <% else %>
        <div type="button" class="position-absolute top-0 start-50 btn btn-sm btn-light rounded-pill p-0" style="width: 1.3rem; height:1.3rem;">
          <%= "#{date.day}" %>
        </div>
      <% end %>
    </div>

    <br>
    <!-- meetings event -->
    <% meetings.each do |meeting| %>
      <div class="bg-white text- rounded-pill text-dark" role="presentation" style="--bs-bg-opacity: .75;">
        <span class="text-info">â€¢</span>
        <span>
          <%= link_to meeting, class:"" do %>
            <%= meeting.start_time.strftime('%R') %>
            <strong><%= meeting.name %></strong>
          <% end %>
        </span>
      </div>
    <% end %>
  <% end %>
</div>
